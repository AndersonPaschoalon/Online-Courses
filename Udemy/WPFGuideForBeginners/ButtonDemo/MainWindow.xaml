<Window x:Class="ButtonDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel>
        
        <Button x:Name="myButton"  
                Width="100" 
                Height="30" 
                Click="myButton_Click"  
                MouseDoubleClick="myButton_MouseDoubleClick"
                MouseEnter="myButton_MouseEnter"
                MouseLeave="myButton_MouseLeave"
                >Click Me!</Button>
        <Label Name="MyLabel"  Foreground="Black" > Hello World</Label>


    </StackPanel>
</Window>
