<Window x:Class="WindowsStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsStoreClone"
        xmlns:uc="clr-namespace:WindowsStoreClone.UserControls"
        mc:Ignorable="d"
        Name="MainWindowMetro"
        Title="MainWindow" Height="800" Width="1300">
    <Grid>
        <!--
        <uc:AnApp></uc:AnApp>
        <uc:AppsViewer></uc:AppsViewer>
        <uc:TopApps></uc:TopApps>
        <uc:ProductivityTopApps></uc:ProductivityTopApps>
        -->
        <Frame Name="MainWindowFrame" Loaded="MainWindowFrame_Loaded" NavigationUIVisibility="Hidden" 
               Width="{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}" Visibility="Visible"></Frame>

    </Grid>
</Window>
