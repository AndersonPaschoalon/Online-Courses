<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="Hello World Window" Height="450" Width="800">
    <StackPanel>

        <StackPanel Margin="10">
            <Label>Hello World</Label>
            <Button x:Name="myButton"
		            Content="Click Me">
            </Button>
        </StackPanel>
        
        <StackPanel Margin="10">
            <Image x:Name="myImage" Width="150" MouseUp="Image_MouseUp" Source="pack://application:,,,/Images/dory.jpg"/>
        </StackPanel>


    </StackPanel>
</Window>
